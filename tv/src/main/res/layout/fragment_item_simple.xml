<?xml version="1.0" encoding="utf-8"?>
<android.support.v17.leanback.widget.ListRowHoverCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:minHeight="60dp"
    android:elevation="10dp">

    <android.support.v17.leanback.widget.ResizingTextView
        android:id="@+id/simple_tv_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:text="Simple Item"
        android:textSize="18sp" />

</android.support.v17.leanback.widget.ListRowHoverCardView>
